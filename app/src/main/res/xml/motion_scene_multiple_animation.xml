<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@layout/motion_end"
        app:constraintSetStart="@layout/motion_start"
        app:duration="1000">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/secondBgView"
            app:touchAnchorSide="top" />
        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="1.2"
                android:scaleY="1.2"
                motion:framePosition="100"
                motion:motionTarget="@id/textViewHello" />
        </KeyFrameSet>

    </Transition>


</MotionScene>